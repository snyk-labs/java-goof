<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<div class="row">
    <div class="span6 offset3">
        <div class="page-header">
            <h1>Sign up</h1>
        </div>

        <form t:type="form" class="well form-horizontal" method="post" t:id="registerForm">

            <fieldset>

                <div class="control-group">
                    <label class="control-label" t:type="label" t:for="firstname">First Name :</label>
                    <div class="controls">
                        <input t:id="firstname" t:type="textField" class="input-medium" required="required" autofocus="autofocus"/>
                        <!--<p class="help-block"><sf:errors path="firstname" cssClass="error"/></p>-->
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" t:type="label" t:for="lastname">Last Name :</label>
                    <div class="controls">
                        <input t:id="lastname" t:type="textField" required="required" class="input-medium"/>
                        <!--<p class="help-block"><sf:errors path="lastname" cssClass="error"/></p>-->
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" t:type="label" t:for="email">Email :</label>
                    <div class="controls">
                        <input t:id="email" t:type="textField" class="input-medium" required="required" t:validate="email" placeholder="your@email.com" />
                        <!--<p class="help-block"><sf:errors path="email" cssClass="error"/></p>-->
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" t:type="label" t:for="password">Password :</label>
                    <div class="controls">
                        <input t:type="passwordField" t:id="password" class="input-medium" required="required" t:validate="minlength=6" placeholder="min 6 characters"/>
                        <!--<p class="help-block"><sf:errors path="password" cssClass="error"/></p>-->
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" t:type="label" t:for="confirmationPassword">Confirm Password :</label>
                    <div class="controls">
                        <input t:type="passwordField" t:id="confirmationPassword" class="input-medium" required="required" t:validate="minlength=6" placeholder="min 6 characters"/>
                        <!--<p class="help-block"><sf:errors path="confirmationPassword" cssClass="error"/></p>-->
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="icon-lock icon-white"></i> Sign up</button>
                </div>

                <div align="center">
                    You have already an account? <a t:type="pageLink" t:page="user/Login">Sign in here</a>
                </div>

            </fieldset>
        </form>

    </div>
</div>

</html>